{
  "name": "kn-biosciences-modern",
  "version": "1.0.0",
  "description": "World-class agricultural e-commerce platform for farmers and dealers",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:api": "cd api && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:api && npm run build:client",
    "build:api": "cd api && npm run build",
    "build:client": "cd client && npm run build",
    "test": "jest",
    "test:api": "cd api && npm run test",
    "test:client": "cd client && npm run test",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install"
  },
  "keywords": [
    "agriculture",
    "e-commerce",
    "farmers",
    "marketplace",
    "supply-chain"
  ],
  "author": "KN Biosciences",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}